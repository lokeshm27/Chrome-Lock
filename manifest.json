{
	"manifest_version": 2,
	
	"name": "Chrome Lock 1.0",
	"description": "Protect your browser with Password.!",
	"version": "1.0.1",
	"options_page": "options.html",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	
	"permissions": [
		"tabs",
		"storage",
		"notifications",
		"activeTab",
		"https://ajax.googleapis.com/"
	],
	
	"background": {
		"scripts": ["bg.js"],
		"persistent": true
	}
}